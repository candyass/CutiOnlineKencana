<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.pengajuan.PengajuanCutiActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Pengajuan Cuti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:text="Pilih Tanggal"
            android:background="?android:selectableItemBackground"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_tanggal_24dp"
            android:id="@+id/activity_pengajuan_tanggal_dari_text" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:layout_marginEnd="4dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"/>
    <TextView
            android:text="Dari Tanggal"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_pengajuan_tanggal_dari_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/activity_pengajuan_tanggal_dari_text"
            android:layout_marginEnd="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
    <TextView
            android:text="Pilih Tanggal"
            android:layout_width="wrap_content"
            android:background="?android:selectableItemBackground"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_tanggal_24dp"
            android:id="@+id/activity_pengajuan_tanggal_ke_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/activity_pengajuan_tanggal_dari_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
    <TextView
            android:text="Sampai Tanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:paddingLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_pengajuan_tanggal_ke_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/activity_pengajuan_tanggal_ke_text"
            android:layout_marginEnd="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
    <TextView
            android:text="ID Pegawai"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextIcon"
            android:background="@drawable/round_title"
            android:id="@+id/textView16" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_pengajuan_id_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:text="Tanggal Cuti"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextIcon"
            android:background="@drawable/round_title"
            android:id="@+id/textView18" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/activity_pengajuan_id_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <EditText
            android:id="@+id/activity_pengajuan_keterangan_editText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:background="@drawable/rectangle"
            android:gravity="top|left" app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_pengajuan_btn_ajukan" android:layout_marginTop="8dp"/>


    <Button
            android:text="Ajukan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_pengajuan_btn_ajukan" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <TextView
            android:text="Keterangan Cuti"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextIcon"
            android:background="@drawable/round_title"
            android:id="@+id/textView13" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_pengajuan_tanggal_ke_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>