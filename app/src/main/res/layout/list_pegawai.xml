<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardElevation="8dp"
        android:padding="8dp"
        app:cardBackgroundColor="@android:color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="65dp" android:layout_height="65dp"
                                                      android:src="@drawable/icon_pria"
                                                      android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp"
                                                      android:id="@+id/list_pegawai_foto"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_pegawai_nama_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_pegawai_foto" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
        <TextView
                android:text="ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextIcon"
                android:paddingLeft="8dp"
                android:background="@drawable/round_title"
                android:id="@+id/textView25" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/list_pegawai_jumlah_cuti_text"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:id="@+id/list_pegawai_id_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView25"/>
    <TextView
            android:text="Jenis Kelamin"
            android:layout_width="0dp"
            android:textColor="@color/colorTextIcon"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_title"
            android:id="@+id/textView28" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/list_pegawai_id_text"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_pegawai_jenis_kelamin_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView28"/>
    <TextView
            android:text="Posisi"
            android:layout_width="0dp"
            android:textColor="@color/colorTextIcon"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_title"
            android:id="@+id/textView30" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/list_pegawai_jenis_kelamin_text"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_pegawai_posisi_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView30"/>
        <TextView
                android:text="Sisa Cuti"
                android:layout_width="0dp"
                android:textColor="@color/colorTextIcon"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/round_title_accent"
                android:id="@+id/textView23" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/list_pegawai_nama_text"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/list_pegawai_jumlah_cuti_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView23"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>